@page "/Numeros"
@rendermode InteractiveServer
<h3>Lista</h3>

<div>
	<label for="Numero1">Número 1</label>
	<input type="number" id="Numero1" class="form-control" @bind="_numero1" />
</div>

<div>
	<label for="Numero2">Número 2</label>
	<input type="number" id="Numero2" class="form-control" @bind="_numero2" />
</div>

<br />

<button class="btn btn-primary" @onclick="CalcularNumeros">Calcular</button>

<h4>Números Pares</h4>
<ul>
	@foreach (var num in _pares)
	{
		<li>@num</li>
	}
</ul>

<h4>Números Impares</h4>
<ul>
	@foreach (var num in _impares)
	{
		<li>@num</li>
	}
</ul>

@code {
	private int _numero1;
	private int _numero2;
	private List<int> _pares = new();
	private List<int> _impares = new();

	private void CalcularNumeros()
	{
		_pares.Clear();
		_impares.Clear();

		int inicio = Math.Min(_numero1, _numero2);
		int fin = Math.Max(_numero1, _numero2);

		for (int i = inicio; i <= fin; i++)
		{
			if (i % 2 == 0)
			{
				_pares.Add(i);
			}
			else
			{
				_impares.Add(i);
			}
		}
	}
}

